PKG_CONFIG_PATH=$HOME/usr/local/lib/pkgconfig CXX="ccache g++" make distcheck

../configure \
	CXX="ccache g++" \
	CXXFLAGS="-g -O0" \
	QMAKE_ARGS="CONFIG+=debug" \
	PKG_CONFIG_PATH=/home/bettini/usr/local/lib/pkgconfig \
	--with-doxygen --prefix=$HOME/usr/local

../configure \
	CXX="ccache g++" \
	CXXFLAGS="-g -O0" \
	--with-qt=/usr/local/Trolltech/Qt-4.6.0-tp1/bin \
	QMAKE_ARGS="CONFIG+=debug" \
	PKG_CONFIG_PATH=/home/bettini/usr/local/lib/pkgconfig \
	--with-doxygen --prefix=$HOME/usr/qt-4.6

../configure \
	CXX="ccache g++" \
	CXXFLAGS="-g -O0" \
	--with-qt=/usr/local/Trolltech/Qt-4.6.0/bin \
	QMAKE_ARGS="CONFIG+=debug" \
	PKG_CONFIG_PATH=/home/bettini/usr/local/lib/pkgconfig \
	--with-doxygen --prefix=$HOME/usr/qt-4.6

--enable-qt4 or --enable-qt3

if you installed a qt from the trolltech site:
depending on where you installed it

--with-qt=/usr/local/Trolltech/Qt-4.4.3/bin/

in windows, cygwin qt3

../configure CXX="ccache g++" CXXFLAGS="-g" --enable-qt3 PKG_CONFIG_PATH=/usr/local/lib/pkgconfig --with-qt=/usr/lib/qt3/bin/ --with-qt-dir=/usr/lib/qt3/

for mingw:

./configure --disable-shared \
	--with-boost=/c/boost_mingw \
	PKG_CONFIG_PATH=/mingw/lib/pkgconfig \
	QMAKE_ARGS="CONFIG+=debug" \
	--prefix=/mingw

if source-highlight libraries are installed using prefix /usr/local

g++ mytest.cpp -o mytest -g \
	`PKG_CONFIG_PATH=/usr/local/lib/pkgconfig/ pkg-config --cflags source-highlight` \
	`PKG_CONFIG_PATH=/usr/local/lib/pkgconfig/ pkg-config --libs source-highlight` \
	-I/c/boost_mingw//include -L/c/boost_mingw//lib -lboost_regex-mt

ERROR:

#include <iostream>
#include <string>
#include <stdlib.h>

using namespace std;

void open_file(const string &f) {
  FILE *in = fopen(f.c_str(), "r");
  if (!in)
    cout << "cannot open file " << f << endl;
  else
    cout << "opened: " << f << endl;
}

int main() {
    open_file("/usr/local/share/source-highlight/java.lang");
    open_file("c:/msys/1.0/local/share/source-highlight/java.lang");
    open_file("/home/bettini/foobar.txt");
    open_file("c:/msys/1.0/home/bettini/foobar.txt");
}

/usr/local does not seem to be understood...