#!/bin/sh
xdg-mime install --mode system --novendor /tmp/debugler-inst/debugler-mime.xml
xdg-desktop-menu install --mode system --novendor /tmp/debugler-inst/debugler.desktop

xdg-icon-resource install --mode system --novendor --size 256 /tmp/debugler-inst/debugler-0.png debugler
xdg-icon-resource install --mode system --novendor --size 48  /tmp/debugler-inst/debugler-1.png debugler
xdg-icon-resource install --mode system --novendor --size 24  /tmp/debugler-inst/debugler-2.png debugle

rm -r /tmp/debugler-inst/

